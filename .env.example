# CAIMF Production Configuration
# Copy to .env for production deployment

# ============ SYSTEM ============
DEBUG_MODE=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# ============ DATA PATHS ============
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
UIDAI_ENROLMENT_FILE=./data/raw/api_data_aadhar_enrolment_0_500000.csv

# ============ SCORING MODEL WEIGHTS (FERS) ============
FERS_WEIGHT_CEPS=0.40
FERS_WEIGHT_IGI=0.35
FERS_WEIGHT_VOLATILITY=0.25

# ============ ANOMALY DETECTION THRESHOLDS ============
VOLATILITY_THRESHOLD=0.3
GROWTH_THRESHOLD=-0.1
MIN_CHILD_RATIO=0.2

# ============ API CONFIGURATION ============
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
ENABLE_API_AUTH=false
API_SECRET_KEY=change_me_in_production

# ============ DASHBOARD CONFIGURATION ============
DASHBOARD_PORT=8501
DASHBOARD_THEME=light
STREAMLIT_SERVER_HEADLESS=true

# ============ DATABASE (Future Use) ============
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=caimf
DB_USER=uidai
DB_PASSWORD=changeme

# ============ SECURITY ============
JWT_SECRET=your_secret_key_here
JWT_ALGORITHM=HS256
CORS_ORIGINS=*

# ============ MONITORING & ALERTS ============
ALERT_EMAIL=alerts@uidai.gov.in
SLACK_WEBHOOK_URL=
ENABLE_MONITORING=true

# ============ CACHE CONFIGURATION ============
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Batch Processing
BATCH_SIZE=1000
REFRESH_INTERVAL_HOURS=24
